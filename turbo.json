{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "globalDependencies": ["tsconfig.json", "turbo.json", "eslint.config.ts"],
  "tasks": {
    "build": {
      "dependsOn": ["build:components"],
      "outputs": ["dist/**", ".next/**", "build/**", ".output/**"],
      "inputs": [
        "src/**",
        "package.json",
        "tsconfig.json",
        "next.config.ts",
        "tailwind.config.ts"
      ]
    },
    "build:components": {
      "outputs": ["dist/**"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "tsconfig.json"]
    },
    "typecheck": {
      "cache": true,
      "inputs": ["src/**", "tsconfig.json", "package.json"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "with": ["dev:components"]
    },
    "dev:components": {
      "cache": false,
      "persistent": true,
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": [],
      "inputs": ["src/**", "eslint.config.*", "package.json"],
      "outputs": []
    },
    "lint:fix": {
      "dependsOn": [],
      "cache": false,
      "inputs": ["src/**", "eslint.config.*", "package.json"]
    },
    "clean": {
      "cache": false,
      "outputs": []
    },
    "format": {
      "cache": false,
      "outputs": []
    },
    "format:check": {
      "cache": true,
      "outputs": []
    }
  }
}
